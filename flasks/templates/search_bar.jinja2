<div class="breadcrumb-wrap">
    <div class="container">
    <div class="row align-items-center">
        <div class="col-lg-12">
        <div class="search-result-content">
            <div class="search-fields-container margin-top-30px">
            <div class="contact-form-action">
                <form action="{{ url_for('search') }}" class="row" method="POST">
                <div class="col-lg-4 col-sm-6 pr-0">
                    <div class="input-box">
                    <label class="label-text">Pick-up Location</label>
                    <div class="form-group">
                        <span class="fa fa-map-marker form-icon"></span>
                        {#<input class="form-control" type="text" placeholder="Destination">#}
                        <select class="form-control" name="location" style="height: 50px;">
                        {% for distinct_location in distinct_locations %}
                        <option value="{{ distinct_location }}" {% if search_term and search_term.location == distinct_location %}selected="true"{% endif %} >{{ distinct_location }}</option>
                        {% endfor %}
                        </select>
                    </div>
                    </div>
                </div>{# end col-lg-4 #}
                <div class="col-lg-4 col-sm-4 pr-0">
                    <div class="input-box">
                    <label class="label-text">Pick-up Date</label>
                    <div class="form-group">
                        <span class="fa fa-calendar form-icon"></span>
                        <input class="date-range form-control" type="date" name="start_date" {% if search_term and search_term.start_date %}value="{{ search_term.start_date }}"{% endif %}>
                    </div>
                    </div>
                </div>{# end col-lg-2 #}
                <div class="col-lg-4 col-sm-4 pr-0">
                    <div class="input-box">
                    <label class="label-text">Drop-off Date</label>
                    <div class="form-group">
                        <span class="fa fa-calendar form-icon"></span>
                        <input class="date-range form-control" type="date" name="end_date" {% if search_term and search_term.end_date %}value="{{ search_term.end_date }}"{% endif %}>
                    </div>
                    </div>
                </div>{# end col-lg-2 #}
                <input type="hidden" name="csrf_token" value="{{ csrf_token() }}"/>
                <div class="btn-box pt-3">
                    {# <button class="theme-btn" type="button">Search Now</button> #}
                    <input type="submit" class="theme-btn" value="Search Now">
                </div>
                </form>
            </div>{# end contact-form-action #}
            </div>{# end search-fields-container #}
        </div>{# end search-result-content #}
        </div>{# end col-lg-12 #}
    </div>{# end row #}
    </div>{# end container #}
</div>{# end breadcrumb-wrap #}