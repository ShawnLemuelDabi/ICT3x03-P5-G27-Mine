{
    // if you are using cpell library...
    "cSpell.words": [
        "backref",
        "Ionicon",
        "MEDIUMBLOB",
        "msgbody",
        "notin",
        "ondelete",
        "onupdate",
        "paynow",
        "pymysql",
        "pyotp",
        "qrcode",
        "resetted",
        "SQLALCHEMY",
        "TINYINT",
        "TOTP",
        "werkzeug"
    ],
    "python.languageServer": "Pylance",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    // I hate the linting complaining about lines being too long
    "python.linting.flake8Args": [
        "--ignore=E501"
    ],
    "python.formatting.provider": "black",
}