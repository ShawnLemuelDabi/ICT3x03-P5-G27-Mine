{
    // if you are using cpell library...
    "cSpell.words": [
        "backref",
        "CSRNG",
        "Hotmail",
        "Ionicon",
        "MEDIUMBLOB",
        "msgbody",
        "notin",
        "ondelete",
        "onupdate",
        "paynow",
        "pymysql",
        "pyotp",
        "qrcode",
        "resetted",
        "singaporetech",
        "SQLALCHEMY",
        "TINYINT",
        "TOTP",
        "werkzeug"
    ],
    "python.languageServer": "Pylance",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    // I hate the linting complaining about lines being too long (E501)
    // unforunately we need to ignore this as sqlalchemy's filter() will return the wrong sql statement if we use `is not None` instead of `!=` (E711/E712)
    "python.linting.flake8Args": [
        "--ignore=E501, E711, E712",
    ],
    "python.formatting.provider": "black",
}